extends layout

block content
  .container-fluid.bg-light.py-5.text-center(style="background-color: #f5f5f5; color: #007bff;")
    h1.display-4.text-primary.mb-4 Contact Task Manager
    p.lead.text-muted If you have any questions, feedback, or inquiries, feel free to get in touch with us. We'd love to hear from you!

  // Additional Contact Information
  .container.text-left.mt-5
    .row
      .col-md-6.mb-4
        .card.shadow(style="background-color: #3949ab;")
          .card-body.text-white
            h5.card-title.text-primary.mb-3 Contact Information
            ul.list-unstyled.mb-0
              li.text-white-50.mb-1 Phone: +1 (123) 456-7890
              li.text-white-50.mb-1 Email: contact@taskmanager.com
              li.text-white-50 Address: 123 Task Street, Tasktown, TS
      .col-md-6.mb-4
        .card.shadow(style="background-color: #00796b;")
          .card-body.text-white
            h5.card-title.text-primary.mb-3 Business Hours
            ul.list-unstyled.mb-0
              li.text-white-50.mb-1 Monday - Friday: 9:00 AM - 5:00 PM
              li.text-white-50.mb-1 Saturday: 10:00 AM - 2:00 PM
              li.text-white-50 Sunday: Closed
