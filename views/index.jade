extends layout

block content
  style.
    /* Custom CSS */

    /* General Styles */
    body {
      font-family: 'Arial', sans-serif;
      background-color: #f8f9fa;
      color: #333;
    }

    /* Jumbotron Styles */
    .jumbotron {
      background-color: #343a40;
      color: #fff;
      padding: 100px 0;
      margin-bottom: 0;
      border-radius: 0;
    }

    .jumbotron h1 {
      font-weight: 700;
    }

    .jumbotron p {
      font-size: 18px;
    }

    /* Card Styles */
    .card {
      border-radius: 10px;
      transition: transform 0.3s ease;
    }

    .card:hover {
      transform: translateY(-10px);
    }

    .card-body {
      background-color: #fff;
      color: #495057;
      border-radius: 10px;
      padding: 20px;
      height: 200px; /* Set a smaller fixed height for the card body */
    }

    .card-title {
      font-size: 24px;
      font-weight: 600;
      margin-bottom: 15px;
    }

    .card-text {
      font-size: 18px;
    }

    /* Button Styles */
    .btn {
      font-weight: 600;
      text-transform: uppercase;
      transition: background-color 0.3s ease, border-color 0.3s ease, color 0.3s ease;
      border-radius: 30px;
    }

    .btn-primary {
      background-color: #17a2b8;
      border-color: #17a2b8;
    }

    .btn-primary:hover {
      background-color: #138496;
      border-color: #138496;
    }

    /* Section Heading Styles */
    .section-heading {
      font-size: 36px;
      font-weight: 700;
      margin-bottom: 40px;
    }

    /* Testimonials Styles */
    .testimonial {
      background-color: #f8f9fa;
      padding: 40px;
      border-radius: 10px;
      margin-bottom: 40px;
      box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
      transition: background-color 0.3s ease; /* Transition for hover effect */
    }

    .testimonial:hover {
      background-color: #e9ecef; /* Hover background color */
    }

    .testimonial h5 {
      font-size: 24px;
      font-weight: 600;
      margin-bottom: 10px;
      color: #343a40; /* Text color */
    }

    .testimonial p {
      font-size: 18px;
      color: #6c757d; /* Text color */
    }

  .jumbotron.jumbotron-fluid.text-center
