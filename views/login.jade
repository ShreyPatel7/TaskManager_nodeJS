extends layout

block content
  .container
    .row.justify-content-center.mt-5
      .col-md-6
        .card
          .card-header.text-center
            h3.card-title Login
          .card-body
            form(action='/login', method='POST')
              .form-group
                label(for='email') Email:
                input#email.form-control(type='email', name='email', placeholder='Enter your email', required)
              .form-group
                label(for='password') Password:
                input#password.form-control(type='password', name='password', placeholder='Enter your password', required)
              button.btn.btn-primary.btn-block(type='submit') Login
            hr
            p.text-center.mb-0 Don't have an account? #[a(href='/signup') Sign Up] now!
